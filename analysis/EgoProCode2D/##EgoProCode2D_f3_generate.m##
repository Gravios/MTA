jpdfLatFwdSpd = histcounts2( decoded_p.hba, -decoded_p.hav, ...
                             mBinHba.edges, mBinHav.edges, ...
                             'Normalization',normalization);
% PLOT 
imagesc(sax, mBinHba.centers, mBinHav.centers, log10(jpdfLatFwdSpd)');
