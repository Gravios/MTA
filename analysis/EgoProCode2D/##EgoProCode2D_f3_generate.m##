        ybins  = egoHbaPhzRmaps_locSmooth.ypos-diff(egoHbaPhzRmaps_locSmooth.ypos(1:2))/2;
        ratemap = ...
            fliplr(...
            rot90(egoHbaPhzRmaps_locSmooth.rmap(:, :, eindex, phzI, hbaI)',-1)) ...
            .*egoHbaPhzRmaps_locSmooth.mask;
% PLOT 
